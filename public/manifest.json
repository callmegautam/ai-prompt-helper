{
    "manifest_version": 3,
    "name": "AI Prompt Helper",
    "version": "1.0",
    "description": "Quick prompts inside AI chat input boxes",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://chat.openai.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
