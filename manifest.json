{
    "manifest_version": 3,
    "name": "AI Prompt Helper",
    "version": "1.0",
    "description": "Quick prompts inside AI chat input boxes",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "icons": {
        "128": "icon.jpg"
    }
}
