{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "ES2020"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": false,
        "resolveJsonModule": true,
        "types": ["chrome"],

        // Chrome extensions allow "top-level await" & modules
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
